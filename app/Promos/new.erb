<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @promos.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @promos.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="promos[title]" class="fieldLabel">Title</label>
            <input type="text" id="promos[title]" name="promos[title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="promos[description]" class="fieldLabel">Description</label>
            <input type="text" id="promos[description]" name="promos[description]" <%= placeholder("Description") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
